# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# repo prefers 80 char limit lines
max_line_length = 80

[*.nim]
indent_style = space
indent_size = 2
